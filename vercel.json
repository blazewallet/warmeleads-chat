{
  "public": true,
  "functions": {
    "src/app/api/stripe-payment/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/create-payment-intent/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/test-stripe/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}